{
  "info": {
    "name": "Event Organization Platform API",
    "description": "Comprehensive API for managing events, tickets, venues, orders, and attendees",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_exporter_id": "1"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "user_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "event_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "organization_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('jwt_token', response.token);",
                  "    pm.collectionVariables.set('user_id', response.user.id);",
                  "    console.log('JWT Token saved:', response.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\",\n  \"phone\": \"+1234567890\",\n  \"roles\": [\"organizer\"]\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": ["{{base_url}}"],
              "path": ["auth", "register"]
            },
            "description": "Register a new user account"
          },
          "response": []
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('jwt_token', response.token);",
                  "    pm.collectionVariables.set('user_id', response.user.id);",
                  "    console.log('JWT Token saved:', response.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            },
            "description": "Login with email and password"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Events",
      "item": [
        {
          "name": "Create Event",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('event_id', response.id);",
                  "    console.log('Event ID saved:', response.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Tech Conference 2025\",\n  \"shortDescription\": \"Annual technology conference\",\n  \"longDescription\": \"Join us for the biggest tech conference of the year featuring industry leaders, workshops, and networking opportunities.\",\n  \"organizerId\": \"{{organization_id}}\",\n  \"category\": \"Technology\",\n  \"tags\": [\"tech\", \"conference\", \"networking\"],\n  \"startAt\": \"2025-06-15T09:00:00Z\",\n  \"endAt\": \"2025-06-15T18:00:00Z\",\n  \"timezone\": \"UTC\",\n  \"capacity\": 500,\n  \"ageLimit\": 18,\n  \"allowReentry\": true,\n  \"refundsAllowed\": false\n}"
            },
            "url": {
              "raw": "{{base_url}}/events",
              "host": ["{{base_url}}"],
              "path": ["events"]
            },
            "description": "Create a new event (Organizer/Admin only)"
          },
          "response": []
        },
        {
          "name": "Get All Events",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/events",
              "host": ["{{base_url}}"],
              "path": ["events"]
            },
            "description": "Get all events (public endpoint)"
          },
          "response": []
        },
        {
          "name": "Get Events by Status",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/events?status=published",
              "host": ["{{base_url}}"],
              "path": ["events"],
              "query": [
                {
                  "key": "status",
                  "value": "published"
                }
              ]
            },
            "description": "Filter events by status"
          },
          "response": []
        },
        {
          "name": "Get Events by Category",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/events?category=Technology",
              "host": ["{{base_url}}"],
              "path": ["events"],
              "query": [
                {
                  "key": "category",
                  "value": "Technology"
                }
              ]
            },
            "description": "Filter events by category"
          },
          "response": []
        },
        {
          "name": "Get Event by ID",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/events/{{event_id}}",
              "host": ["{{base_url}}"],
              "path": ["events", "{{event_id}}"]
            },
            "description": "Get event details by ID"
          },
          "response": []
        },
        {
          "name": "Update Event",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated Tech Conference 2025\",\n  \"capacity\": 600\n}"
            },
            "url": {
              "raw": "{{base_url}}/events/{{event_id}}",
              "host": ["{{base_url}}"],
              "path": ["events", "{{event_id}}"]
            },
            "description": "Update event details (Organizer/Admin only)"
          },
          "response": []
        },
        {
          "name": "Publish Event",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/events/{{event_id}}/publish",
              "host": ["{{base_url}}"],
              "path": ["events", "{{event_id}}", "publish"]
            },
            "description": "Publish an event (Organizer/Admin only)"
          },
          "response": []
        },
        {
          "name": "Cancel Event",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/events/{{event_id}}/cancel",
              "host": ["{{base_url}}"],
              "path": ["events", "{{event_id}}", "cancel"]
            },
            "description": "Cancel an event (Organizer/Admin only)"
          },
          "response": []
        },
        {
          "name": "Increment View Count",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/events/{{event_id}}/view",
              "host": ["{{base_url}}"],
              "path": ["events", "{{event_id}}", "view"]
            },
            "description": "Increment event view count (public endpoint)"
          },
          "response": []
        },
        {
          "name": "Add to Favorites",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/events/{{event_id}}/favorite",
              "host": ["{{base_url}}"],
              "path": ["events", "{{event_id}}", "favorite"]
            },
            "description": "Add event to favorites (Authenticated users)"
          },
          "response": []
        },
        {
          "name": "Delete Event",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/events/{{event_id}}",
              "host": ["{{base_url}}"],
              "path": ["events", "{{event_id}}"]
            },
            "description": "Delete an event (Organizer/Admin only)"
          },
          "response": []
        }
      ]
    }
  ]
}
